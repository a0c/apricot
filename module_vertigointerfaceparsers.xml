<?xml version="1.0" encoding="ISO-8859-1"?>
<project name="module_vertigointerfaceparsers" default="compile.module.vertigointerfaceparsers">
  <dirname property="module.vertigointerfaceparsers.basedir" file="${ant.file.module_vertigointerfaceparsers}"/>
  
  <property name="module.jdk.home.vertigointerfaceparsers" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.vertigointerfaceparsers" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.vertigointerfaceparsers" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.vertigointerfaceparsers" value="${compiler.args}"/>
  
  <property name="vertigointerfaceparsers.output.dir" value="${module.vertigointerfaceparsers.basedir}/classes/production/VertigoInterfaceParsers"/>
  <property name="vertigointerfaceparsers.testoutput.dir" value="${module.vertigointerfaceparsers.basedir}/classes/test/VertigoInterfaceParsers"/>
  
  <path id="vertigointerfaceparsers.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="vertigointerfaceparsers.module.classpath">
    <path refid="${module.jdk.classpath.vertigointerfaceparsers}"/>
    <path refid="library.scrappy.classpath"/>
    <pathelement location="C:/Program Files/JetBrains/IntelliJ IDEA 7.0.4/lib/jgoodies-forms.jar"/>
    <path refid="library.junit.classpath"/>
    <path refid="library.lib.classpath"/>
  </path>
  
  <path id="vertigointerfaceparsers.runtime.module.classpath">
    <path refid="${module.jdk.classpath.vertigointerfaceparsers}"/>
    <pathelement location="${vertigointerfaceparsers.output.dir}"/>
    <pathelement location="${vertigointerfaceparsers.testoutput.dir}"/>
    <path refid="library.scrappy.classpath"/>
    <pathelement location="C:/Program Files/JetBrains/IntelliJ IDEA 7.0.4/lib/jgoodies-forms.jar"/>
    <path refid="library.junit.classpath"/>
    <path refid="library.lib.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.vertigointerfaceparsers">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.vertigointerfaceparsers">
    <patternset refid="compiler.excluded"/>
    <patternset refid="excluded.from.module.vertigointerfaceparsers"/>
  </patternset>
  
  <path id="vertigointerfaceparsers.module.sourcepath">
    <dirset dir="${module.vertigointerfaceparsers.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  <path id="vertigointerfaceparsers.module.test.sourcepath">
    <dirset dir="${module.vertigointerfaceparsers.basedir}">
      <include name="test"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.vertigointerfaceparsers" depends="compile.module.vertigointerfaceparsers.production,compile.module.vertigointerfaceparsers.tests" description="Compile module VertigoInterfaceParsers"/>
  
  <target name="compile.module.vertigointerfaceparsers.production" description="Compile module VertigoInterfaceParsers; production classes">
    <mkdir dir="${vertigointerfaceparsers.output.dir}"/>
    <javac2 destdir="${vertigointerfaceparsers.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.vertigointerfaceparsers}/javac">
      <compilerarg line="${compiler.args.vertigointerfaceparsers}"/>
      <bootclasspath refid="vertigointerfaceparsers.module.bootclasspath"/>
      <classpath refid="vertigointerfaceparsers.module.classpath"/>
      <src refid="vertigointerfaceparsers.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.vertigointerfaceparsers"/>
    </javac2>
    
    <copy todir="${vertigointerfaceparsers.output.dir}">
      <fileset dir="${module.vertigointerfaceparsers.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
        <patternset refid="excluded.from.compilation.vertigointerfaceparsers"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.vertigointerfaceparsers.tests" depends="compile.module.vertigointerfaceparsers.production" description="compile module VertigoInterfaceParsers; test classes" unless="skip.tests">
    <mkdir dir="${vertigointerfaceparsers.testoutput.dir}"/>
    <javac2 destdir="${vertigointerfaceparsers.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.vertigointerfaceparsers}/javac">
      <compilerarg line="${compiler.args.vertigointerfaceparsers}"/>
      <classpath refid="vertigointerfaceparsers.module.classpath"/>
      <classpath location="${vertigointerfaceparsers.output.dir}"/>
      <src refid="vertigointerfaceparsers.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.vertigointerfaceparsers"/>
    </javac2>
    
    <copy todir="${vertigointerfaceparsers.testoutput.dir}">
      <fileset dir="${module.vertigointerfaceparsers.basedir}/test">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
        <patternset refid="excluded.from.compilation.vertigointerfaceparsers"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.vertigointerfaceparsers" description="cleanup module">
    <delete dir="${vertigointerfaceparsers.output.dir}"/>
    <delete dir="${vertigointerfaceparsers.testoutput.dir}"/>
  </target>
</project>